---
import Icon from "astro-icon";
---

<header>
  <a href="/" class="logo_container">
    <Icon name="file-icons:monkey" />
    <span class="logo_text">{"<CodeMonkey />"}</span>
  </a>
  <nav>
    <ul>
      <a class="nav_link" href="/">
        <li>Home</li>
      </a>
      <a class="nav_link" href="/about">
        <li>About</li>
      </a>
      <a class="nav_link" href="/blog">
        <li>Blog</li>
      </a>
    </ul>
  </nav>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.8rem 7.2rem;

    background-color: #14144977;
  }

  .logo_container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .logo_text {
    font-size: 2rem;
    font-weight: 700;
    color: white;
  }

  [astro-icon] {
    width: 4.8rem;
    height: 4.8rem;
    color: white;
  }

  ul {
    display: flex;
    align-items: center;
    gap: 1.6rem;
    font-weight: 500;
  }

  .nav_link {
    list-style: none;
    border-bottom: 4px solid transparent;
    border-radius: 8px;
    padding: 0.4rem;

    & > li {
      font-size: 1.8rem;
      text-align: center;
      text-decoration: none;
      letter-spacing: 0.5rem;
      color: #b6b6b6;
      padding-left: 0.5rem;
    }

    &:hover {
      border-bottom: 4px solid #9857a8;
      transition: all ease-in 0.3s;

      & > li {
        color: #e1e1e2;
      }
    }
  }
</style>
